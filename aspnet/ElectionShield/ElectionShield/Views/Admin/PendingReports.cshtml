@model List<ElectionShield.ViewModels.ReportViewModel>
@{
    ViewData["Title"] = "Pending Reports";
    Layout = "_AdminLayout";


}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0"><i class="fas fa-clock me-2 text-warning"></i>Pending Reports</h1>
        <div>
            <span class="badge bg-warning fs-6">Pending: @Model.Count</span>
            <a asp-action="Dashboard" class="btn btn-secondary btn-sm ms-2">
                <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="fas fa-check-circle text-success fa-3x mb-3"></i>
                <h4 class="text-success">No Pending Reports</h4>
                <p class="text-muted">All reports have been processed. Great work!</p>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var report in Model.OrderByDescending(r => r.CreatedAt))
            {
                <div class="col-lg-6 mb-4">
                    <div class="card shadow border-0 h-100">
                        <div class="card-header bg-white py-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0 text-truncate">@report.Title</h6>
                                <span class="badge @report.PriorityBadgeClass">@report.Priority</span>
                            </div>
                            <div class="text-muted small mt-1">
                                <i class="fas fa-hashtag me-1"></i>@report.ReportCode •
                                <i class="fas fa-clock me-1"></i>@report.TimeAgo
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@report.Description</p>

                            <div class="mb-3">
                                <strong><i class="fas fa-map-marker-alt me-1 text-danger"></i>Location:</strong>
                                <span class="text-muted">@report.Location</span>
                            </div>

                            <div class="mb-3">
                                <strong><i class="fas fa-tag me-1 text-info"></i>Category:</strong>
                                <span class="text-muted">@report.Category</span>
                            </div>

                            @if (report.MediaFiles.Any())
                            {
                                <div class="mb-3">
                                    <strong><i class="fas fa-paperclip me-1 text-success"></i>Evidence:</strong>
                                    <span class="text-muted">@report.MediaFiles.Count files attached</span>
                                </div>
                            }

                            <div class="d-grid gap-2">
                                <a asp-action="ReportDetails" asp-route-id="@report.Id" class="btn btn-primary">
                                    <i class="fas fa-eye me-1"></i>Review Report
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
