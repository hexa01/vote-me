@using ElectionShield.ViewModels
@model ReportDetailViewModel
@{
    ViewData["Title"] = "Report Review";
    Layout = "_AdminLayout";

}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0"><i class="fas fa-search me-2 text-primary"></i>Report Review</h1>
        <div>
            <a asp-action="PendingReports" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to Pending
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Report Details Card -->
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@Model.Report.Title</h5>
                        <div>
                            <span class="badge bg-light text-dark">@Model.Report.ReportCode</span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6><i class="fas fa-info-circle me-2"></i>Basic Information</h6>
                            <table class="table table-sm table-borderless">
                                <tr>
                                    <td><strong>Category:</strong></td>
                                    <td>@Model.Report.Category</td>
                                </tr>
                                <tr>
                                    <td><strong>Status:</strong></td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(Model.Report.Status)">@Model.Report.Status</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Priority:</strong></td>
                                    <td>
                                        <span class="badge @GetPriorityBadgeClass(Model.Report.Priority)">@Model.Report.Priority</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Anonymous:</strong></td>
                                    <td>@(Model.Report.IsAnonymous ? "Yes" : "No")</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-map-marker-alt me-2"></i>Location Details</h6>
                            <table class="table table-sm table-borderless">
                                <tr>
                                    <td><strong>Address:</strong></td>
                                    <td>@Model.Report.Location</td>
                                </tr>
                                <tr>
                                    <td><strong>Latitude:</strong></td>
                                    <td>@Model.Report.Latitude.ToString("F6")</td>
                                </tr>
                                <tr>
                                    <td><strong>Longitude:</strong></td>
                                    <td>@Model.Report.Longitude.ToString("F6")</td>
                                </tr>
                                <tr>
                                    <td><strong>Submitted:</strong></td>
                                    <td>@Model.Report.CreatedAt.ToString("MMM dd, yyyy h:mm tt")</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <h6><i class="fas fa-align-left me-2"></i>Description</h6>
                    <div class="p-3 bg-light rounded mb-4">
                        @Model.Report.Description
                    </div>

                    <!-- Media Files -->
                    @if (Model.Report.MediaFiles.Any())
                    {
                        <h6><i class="fas fa-paperclip me-2"></i>Attached Evidence (@Model.Report.MediaFiles.Count)</h6>
                        <div class="row g-3 mb-4">
                            @foreach (var media in Model.Report.MediaFiles)
                            {
                                <div class="col-sm-6 col-md-4 col-lg-3">
                                    <div class="card">
                                        <div class="card-body text-center p-3">
                                            @if (media.Type == MediaType.Image)
                                            {
                                                <img src="~/@media.FilePath" class="img-fluid rounded mb-2"
                                                     style="max-height: 120px; object-fit: cover;"
                                                     alt="@media.FileName"
                                                     data-bs-toggle="modal"
                                                     data-bs-target="#mediaModal"
                                                     onclick="showMedia('@media.FilePath', '@media.ContentType')" />
                                            }
                                            else if (media.Type == MediaType.Video)
                                            {
                                                <i class="fas fa-video text-primary fa-2x mb-2"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-file text-secondary fa-2x mb-2"></i>
                                            }
                                            <h6 class="card-title small text-truncate">@media.FileName</h6>
                                            <p class="card-text text-muted small">@FormatFileSize(media.FileSize)</p>
                                            <a href="~/@media.FilePath" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <!-- Location Map -->
                    <h6><i class="fas fa-map me-2"></i>Incident Location</h6>
                    @* <div id="locationMap" style="height: 300px; border-radius: 0.375rem;" class="mb-4"></div>
                </div> *@
            <div class="card-body p-0">
                <div id="locationMap" style="height: 600px; width: 100%;"></div>
            </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Verification Panel -->
            <div class="card shadow">
                <div class="card-header bg-warning text-dark py-3">
                    <h5 class="mb-0"><i class="fas fa-user-shield me-2"></i>Verification Panel</h5>
                </div>
                <div class="card-body">
                    <form asp-action="VerifyReport" method="post">
                        <input type="hidden" name="reportId" value="@Model.Report.Id" />

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Verification Status</label>
                            <select name="status" class="form-select" required>
                                <option value="">Select Status</option>
                                <option value="Approved">Approve Report</option>
                                <option value="Rejected">Reject Report</option>
                                <option value="NeedsMoreInfo">Needs More Information</option>
                                <option value="Escalated">Escalate to Authorities</option>
                                <option value="Duplicate">Mark as Duplicate</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Comments</label>
                            <textarea name="comments" class="form-control" rows="4"
                                      placeholder="Add verification comments, reasons for decision, or additional instructions..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Action Taken</label>
                            <input type="text" name="actionTaken" class="form-control"
                                   placeholder="Describe any actions taken..." />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Escalated To (if applicable)</label>
                            <input type="text" name="escalatedTo" class="form-control"
                                   placeholder="e.g., Local Police, Election Commission..." />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check me-1"></i>Submit Verification
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow mt-4">
                <div class="card-header bg-light py-3">
                    <h6 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="UpdateReportStatus" asp-route-reportId="@Model.Report.Id" asp-route-status="Resolved"
                           class="btn btn-outline-success btn-sm">
                            <i class="fas fa-check-circle me-1"></i>Mark Resolved
                        </a>
                        <a asp-action="UpdateReportStatus" asp-route-reportId="@Model.Report.Id" asp-route-status="Escalated"
                           class="btn btn-outline-warning btn-sm">
                            <i class="fas fa-exclamation-triangle me-1"></i>Mark Escalated
                        </a>
                        <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="fas fa-trash me-1"></i>Delete Report
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Media Modal -->
<div class="modal fade" id="mediaModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Media Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" class="img-fluid" style="max-height: 70vh;" />
                <video id="modalVideo" src="" controls class="img-fluid" style="max-height: 70vh; display: none;"></video>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger"><i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this report? This action cannot be undone.</p>
                <p class="text-muted small">Report: @Model.Report.Title (@Model.Report.ReportCode)</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a asp-action="UpdateReportStatus" asp-route-reportId="@Model.Report.Id" asp-route-status="Rejected"
                   class="btn btn-danger">Delete Report</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <link rel="stylesheet" 
          href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />

    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script>
        // Initialize map
        var map = L.map('locationMap').setView([@Model.Report.Latitude, @Model.Report.Longitude], 15);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap contributors'
        }).addTo(map);

        // Add marker
        L.marker([@Model.Report.Latitude, @Model.Report.Longitude])
            .addTo(map)
            .bindPopup('@Model.Report.Location')
            .openPopup();

        // Media preview function
        function showMedia(filePath, contentType) {
            if (contentType.startsWith('image/')) {
                document.getElementById('modalImage').src = '/' + filePath;
                document.getElementById('modalImage').style.display = 'block';
                document.getElementById('modalVideo').style.display = 'none';
            } else if (contentType.startsWith('video/')) {
                document.getElementById('modalVideo').src = '/' + filePath;
                document.getElementById('modalVideo').style.display = 'block';
                document.getElementById('modalImage').style.display = 'none';
            }
        }
    </script>
}

@functions {
    public string GetStatusBadgeClass(ReportStatus status)
    {
        return status switch
        {
            ReportStatus.Pending => "bg-secondary",
            ReportStatus.UnderReview => "bg-info",
            ReportStatus.Verified => "bg-success",
            ReportStatus.Rejected => "bg-danger",
            ReportStatus.Resolved => "bg-primary",
            ReportStatus.Escalated => "bg-warning",
            _ => "bg-secondary"
        };
    }

    public string GetPriorityBadgeClass(ReportPriority priority)
    {
        return priority switch
        {
            ReportPriority.Low => "bg-success",
            ReportPriority.Medium => "bg-warning",
            ReportPriority.High => "bg-danger",
            ReportPriority.Critical => "bg-dark",
            _ => "bg-secondary"
        };
    }

    public string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        int order = 0;
        double len = bytes;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len /= 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}