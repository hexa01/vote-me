@using ElectionShield.ViewModels
@model List<ReportViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Election Shield - Reports</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    
    <style>
        .hero-text {
            font-size: 3.5rem;
            font-weight: 800;
            background: linear-gradient(90deg, #0d6efd, #0c4cc7);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            line-height: 1.2;
        }
        .report-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .report-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.2);
        }
        .report-card img {
            height: 280px;
            object-fit: cover;
        }
        .upload-btn {
            padding: 14px 40px;
            font-size: 1.2rem;
            font-weight: 600;
            border-radius: 50px;
        }
        .section-padding {
            padding: 60px 0;
        }
    </style>
</head>
<body class="bg-light">

    <!-- Hero Section -->
    <section class="text-center section-padding bg-white">
        <div class="container">
            <h1 class="hero-text mb-4">
                Your small contribution<br>
                <span class="text-primary">can make a</span><br>
                <span class="text-primary">BIG Difference</span>
            </h1>
            <a href="/Report/Create" class="btn btn-primary btn-lg upload-btn shadow-lg">
                <i class="bi bi-cloud-upload me-2"></i> Upload Evidence
            </a>
        </div>
    </section>

    <!-- Evidence Gallery -->
    <section class="section-padding bg-light">
        <div class="container">
            <h2 class="text-center mb-5 fw-bold text-dark">Community Submitted Evidence</h2>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-image display-1 text-muted"></i>
                    <p class="mt-3 text-muted fs-4">No evidence uploaded yet. Be the first!</p>
                </div>
            }
            else
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
                    @foreach (var report in Model)
                    {
                        @foreach (var media in report.MediaFiles)
                        {
<div class="col">
    <div class="card report-card h-100">
        <!-- Media placeholder -->
        <img src="/@media.FilePath" class="card-img-top media-element imageReport" alt="Election evidence">
        <video class="card-img-top media-element videoReport" controls style="display:none;">
            <source src="/@media.FilePath" type="video/mp4">
            Your browser does not support the video tag.
        </video>

        <div class="card-body text-center">
            <small class="text-muted">
                Uploaded on @report.CreatedAt.ToString("MMM dd, yyyy")
            </small>
        </div>
    </div>
</div>

                        }
                    }
                </div>
            }
        </div>
    </section>
<script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function(){

            var imageExtensions = ["png", "jpg", "gif", "jpeg", ".ico"];
            var videoExtension = ["mp4", "mkv", "webm", "m4a"];
            $(".imageReport").each(function(){
                var fileName = $(this).attr("src");
                var extension = fileName.substring(fileName.lastIndexOf('.') + 1);
                imageExtensions.forEach(item => {
                    if(extension === item){
                        $(this).show();
                        $(this).siblings(".videoReport").hide();
                    }
                });
            });

            $(".videoReport").each(function(){

            });
        });
    </script>

</body>
</html>