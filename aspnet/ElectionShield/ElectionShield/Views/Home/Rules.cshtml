<style>

  /* Removed Dark Theme styles */
  
  *{box-sizing:border-box}
  body{margin:0;font-family:Inter, system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial; background:var(--bg); color:var(--text); line-height:1.45}
  .wrap{max-width:var(--maxw);margin:36px auto;padding:20px}
 h1{margin:0;font-size:20px}
  p.lead{margin:4px 0 0;color:var(--muted);font-size:13px}

  nav{display:flex;gap:8px;flex-wrap:wrap;margin:16px 0}
  .btn{background:var(--card);border:1px solid rgba(15,23,42,0.06);padding:8px 12px;border-radius:8px;cursor:pointer}
  .btn.ghost{background:transparent}
  .controls{margin-left:auto;display:flex;gap:8px}

  main{display:grid;grid-template-columns:1fr 320px;gap:18px}
  @@media (max-width:900px){main{grid-template-columns:1fr} .sidebar{order:2}}

  .card{background:var(--card);border-radius:var(--radius);padding:16px;box-shadow:0 6px 18px rgba(2,6,23,0.06)}
  .section-title{font-weight:700;margin:0 0 10px}

  /* Rules list */
  .rules{display:flex;flex-direction:column;gap:10px}
  .rule{border-left:4px solid rgba(14,165,164,0.12);padding:12px;background:transparent;border-radius:8px}
  .rule summary{cursor:pointer;outline:none;font-weight:600}
  .rule p{margin:6px 0 0;color:var(--muted);font-size:13px}

  /* Video list */
  .video-grid{display:grid;grid-template-columns:1fr 1fr;gap:8px}
  @@media (max-width:480px){.video-grid{grid-template-columns:1fr}}
  .video-thumb{position:relative;padding-top:56.25%;overflow:hidden;border-radius:8px;background:#000}
  .video-thumb iframe{position:absolute;top:0;left:0;width:100%;height:100%;border:0}

  /* Sidebar */
  .sticky-wrapper{
   position: sticky;
   top: 18px; 
  }

  .search input{width:100%;padding:10px;border-radius:8px;border:1px solid rgba(2,6,23,0.06)}
  .tag{display:inline-block;padding:6px 8px;border-radius:999px;background:rgba(14,165,164,0.12);color:var(--accent);font-weight:600;font-size:12px}

  footer{margin-top:20px;text-align:center;color:var(--muted);font-size:13px}

  /* Print styles are no longer needed since the button is gone, but keeping the print media query for standard browser printing */
  @@media print{
   body{background:white;color:black}
   .controls, .sidebar{display:none}
   .wrap{margin:0;padding:0}
   .card{box-shadow:none}
  }
 </style>
 <div class="wrap" id="app">
  <header>
   <div class="logo" style="width:100px;height:100px">
