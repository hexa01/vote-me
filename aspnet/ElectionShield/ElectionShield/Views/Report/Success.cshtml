@{
    ViewData["Title"] = "Report Submitted Successfully";
    var reportCode = ViewBag.ReportCode as string;
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow border-0">
            <div class="card-body text-center p-5">
                <div class="success-icon mb-4">
                    <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                </div>

                <h2 class="card-title mb-3">Report Submitted Successfully!</h2>

                <p class="card-text mb-4">
                    Thank you for helping protect election integrity. Your report has been received and will be reviewed by our team.
                </p>

                @if (!string.IsNullOrEmpty(reportCode))
                {
                    <div class="alert alert-info mb-4">
                        <h5 class="alert-heading">Your Report Code</h5>
                        <div class="report-code display-6 fw-bold text-primary">@reportCode</div>
                        <p class="mb-0 mt-2">Use this code to track your report status</p>
                    </div>
                }

                <div class="important-notes mb-4">
                    <h6 class="fw-semibold mb-3">What happens next?</h6>
                    <ul class="list-unstyled text-start">
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Your report is now in our secure system</li>
                        <li class="mb-2"><i class="fas fa-robot text-info me-2"></i>AI analysis will process your submission</li>
                        <li class="mb-2"><i class="fas fa-user-shield text-warning me-2"></i>Administrators will review and verify</li>
                        <li class="mb-2"><i class="fas fa-bell text-primary me-2"></i>You'll receive updates on significant status changes</li>
                    </ul>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a asp-action="Track" class="btn btn-primary btn-lg px-4">
                        <i class="fas fa-search me-2"></i>Track Report Status
                    </a>
                    <a asp-action="Create" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="fas fa-plus me-2"></i>Submit Another Report
                    </a>
                </div>

                <div class="mt-4 pt-3 border-top">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>
                        Your report is confidential and protected. For emergencies, contact local authorities.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .report-code {
        font-family: 'Courier New', monospace;
        letter-spacing: 2px;
        background: #f8f9fa;
        padding: 10px;
        border-radius: 5px;
        border: 2px dashed #dee2e6;
    }

    .success-icon {
        animation: bounceIn 0.6s ease;
    }

    @@keyframes bounceIn {
        0% { transform: scale(0.3); opacity: 0; }
        50% { transform: scale(1.05); opacity: 1; }
        100% { transform: scale(1); opacity: 1; }
    }
</style>